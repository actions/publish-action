{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}